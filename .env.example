# ===========================================
# EXAMPLE ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ===========================================

# Databricks Configuration
DATABRICKS_HOST=https://your-workspace.azuredatabricks.net
DATABRICKS_TOKEN=your_token_here
DATABRICKS_CLUSTER_ID=your_cluster_id

# Azure Service Principal (Production)
PROD_AZURE_SP_APPLICATION_ID=your_app_id
PROD_AZURE_SP_CLIENT_SECRET=your_secret
PROD_AZURE_SP_TENANT_ID=your_tenant_id

# Azure Service Principal (Staging)
STAGING_AZURE_SP_APPLICATION_ID=your_app_id
STAGING_AZURE_SP_CLIENT_SECRET=your_secret
STAGING_AZURE_SP_TENANT_ID=your_tenant_id

# Email Configuration (for notifications)
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password

# GitHub
WORKFLOW_TOKEN=your_github_token

